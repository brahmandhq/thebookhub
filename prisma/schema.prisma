generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id             Int       @id @default(autoincrement())
  bookId         String
  name           String
  description    String
  duration       String?
  language       String?
  copyright_year Int?
  url_librivox   String?
  authorId       Int
  imageLink      String?
  author         Author    @relation(fields: [authorId], references: [id])
  chapters       Chapter[]
  genres         Genre[]   @relation("BookGenres")
}

model Chapter {
  id       Int     @id @default(autoincrement())
  bookId   Int
  link     String
  title    String?
  reader   String?
  duration String?
  book     Book    @relation(fields: [bookId], references: [id])
}

model Author {
  id        Int     @id @default(autoincrement())
  authorId  String
  firstName String?
  lastName  String?
  dob       String?
  dod       String?
  books     Book[]
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[] @relation("BookGenres")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  picture   String
}
